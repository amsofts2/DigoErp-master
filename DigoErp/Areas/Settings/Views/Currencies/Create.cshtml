@using DigoErp.Resources.App_Resources
@using DigoErp.Resources.Settings.Currencies
@using DigoErp.Service.Enums
@{
    ViewBag.Title = ViewBag.Id > 0 ? CurrencyRes.EditCurrency : CurrencyRes.NewCurrency;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- begin #content -->
<div id="content" class="content" ng-controller="CurrencyController as vm">
    <!-- begin breadcrumb -->
    <ol class="breadcrumb pull-right">
        <li class="breadcrumb-item"><a href="javascript:;">@AppResource.Home</a></li>
        <li class="breadcrumb-item"><a href="javascript:;">@AppResource.Settings</a></li>
        <li class="breadcrumb-item active">@ViewBag.Title</li>
    </ol>
    <!-- end breadcrumb -->
    <!-- begin page-header -->
    <h1 class="page-header">@ViewBag.Title</h1>
    <!-- end page-header -->
    <!-- begin row -->
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-lg-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-heading">
                    <h4 class="panel-title">@ViewBag.Title</h4>
                </div>
                <div class="panel-body">
                    <form name="currencyForm" id="currencyForm" data-parsley-validate="true" ng-submit="vm.save()">
                        <input type="hidden" name="currencyId" id="currencyId" ng-model="vm.Id" value="@(ViewBag.Id > 0 ? ViewBag.Id : 0)" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="Name">@CurrencyRes.Name</label>
                                    <input type="text" data-parsley-required="true" class="form-control m-b-5" id="Name" name="Name" ng-model="vm.Name" placeholder="@CurrencyRes.EnterName">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="Code">@CurrencyRes.Code</label>
                                    <select data-parsley-required="true" id="Code" name="Code" ng-model="vm.Code" class="form-control m-b-5 selectpicker" data-live-search="true">
                                        <option value="">@CurrencyRes.SelectCode</option>
                                        <option value="AED">AED</option>
                                        <option value="SR">SR</option>
                                        <option value="BHD">BHD</option>
                                        <option value="QAR">QAR</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="Rate">@CurrencyRes.Rate</label>
                                    <input type="text" data-parsley-required="true" class="form-control m-b-5" id="Rate" name="Rate" ng-model="vm.Rate" placeholder="@CurrencyRes.EnterRate">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="Precision">@CurrencyRes.Precision</label>
                                    <input type="text" data-parsley-required="true" class="form-control m-b-5" id="Precision" name="Precision" ng-model="vm.Precision" placeholder="@CurrencyRes.EnterPrecision">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="Symbol">@CurrencyRes.Symbol</label>
                                    <input type="text" data-parsley-required="true" class="form-control m-b-5" id="Symbol" name="Symbol" ng-model="vm.Symbol" placeholder="@CurrencyRes.EnterSymbol">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="SymbolPosition">@CurrencyRes.SymbolPosition</label>
                                    <select data-parsley-required="true" id="SymbolPosition" name="SymbolPosition" ng-model="vm.SymbolPosition" class="form-control m-b-5 selectpicker" data-live-search="true">
                                        <option value="">@CurrencyRes.SelectCode</option>
                                        <option value="@SymbolPosition.AfterAmount">@CurrencyRes.AfterAmount</option>
                                        <option value="@SymbolPosition.BeforeAmount">@CurrencyRes.BeforeAmount</option>
                                    </select>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="DecimalMark">@CurrencyRes.DecimalMark</label>
                                    <input type="text" data-parsley-required="true" class="form-control m-b-5" id="DecimalMark" name="DecimalMark" ng-model="vm.DecimalMark" placeholder="@CurrencyRes.EnterDecimalMark">
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="Thousands_Separator">@CurrencyRes.ThousandsSeparator</label>
                                    <input type="text" data-parsley-required="true" class="form-control m-b-5" id="Thousands_Separator" name="Thousands_Separator" ng-model="vm.Thousands_Separator" placeholder="@CurrencyRes.EnterThousandsSeparator">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="switcher_checkbox_4">@CurrencyRes.Enabled</label>
                                    <div class="switcher switcher-purple" style="display: block;">
                                        <input type="checkbox" name="switcher_checkbox_4" id="switcher_checkbox_4" ng-model="vm.Enabled" checked="" value="1">
                                        <label for="switcher_checkbox_4"></label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group m-b-10 p-t-5">
                                    <label for="switcher_checkbox_3">@CurrencyRes.DefaultCurrency</label>
                                    <div class="switcher switcher-purple" style="display: block;">
                                        <input type="checkbox" name="switcher_checkbox_3" id="switcher_checkbox_3" ng-model="vm.Default_Currency" checked="" value="1">
                                        <label for="switcher_checkbox_3"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary m-r-5">@AppResource.Submit</button>
                    </form>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->
</div>
<!-- end #content -->
@section scripts{
    <script src="~/Scripts/Controllers/CurrencyController.js"></script>
}